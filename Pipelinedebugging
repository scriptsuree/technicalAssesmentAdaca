name: Java CI/CD
on:
  push:
    branches: [ main ]
jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    permissions:
      id-token: write
      contents: read
    steps:
      - uses: actions/checkout@v3
      - name: Set up JDK 11
        uses: actions/setup-java@v3
        with:
          java-version: '11'
          distribution: 'temurin'
          cache: 'maven'
      - name: Build and Test
        run: mvn -B verify
      - name: Configure AWS Credentials
        uses: aws-actions/configure-aws-credentials@v2
        with:
          role-to-assume: arn:aws:iam::123456789012:role/GitHubAction-S3-DeployRole # IAM Role ARN
          aws-region: us-east-1 # Your AWS region
      - name: Deploy to S3
        run: aws s3 cp target/app.jar s3://my-deployment-bucket/app-${{ github.sha }}.jar
